PROCEDURE FizzBuzz(BYVAL iterations : INTEGER)
  DECLARE i : INTEGER
  DECLARE str : STRING

  FOR i <- 1 TO iterations
    str <- ""
    IF i MOD 3 = 0 THEN
      str <- str & "Fizz"
    ENDIF

    IF i MOD 5 = 0 THEN
      str <- str & "Buzz"
    ENDIF

    OUTPUT i, str
  NEXT i
ENDPROCEDURE

CALL FizzBuzz(100)